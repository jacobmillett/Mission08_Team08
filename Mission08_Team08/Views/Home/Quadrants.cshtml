@model IEnumerable<IGrouping<Mission08_Team08.Models.Quadrant, Mission08_Team08.Models.Task>>

@{
    ViewData["Title"] = "Task Quadrants";
}

<div class="container">
    <h1 class="text-center display-4">@ViewData["Title"]</h1>
    <p class="text-center">Tasks organized by their quadrants.</p>

    <div class="row">
        @foreach (var group in Model.OrderBy(g => g.Key))
        {
            <div class="col-md-6 mb-4">
                <h3>@Enum.GetName(typeof(Mission08_Team08.Models.Quadrant), group.Key)</h3>
                <ul>
                    @foreach (var task in group)
                    {
                        <li>
                            @task.TaskName - Due: @task.DueDate
                            <br />
                            Category: @task.Category?.CategoryName
                            <br />
                            Completed: @(task.Completed ? "Yes" : "No")
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
